<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="@drawable/drawable_vaccinations_all_india_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:id="@+id/tv_vaccinations_nameOfState"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="NameOfState"
            android:paddingStart="5dp"
            android:textColor="@color/vaccination_name_of_state"
            android:textStyle="bold"
            android:textSize="15sp"
            tools:ignore="RtlSymmetry" />


        <TextView
            android:id="@+id/tv_total_first_dose_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            tools:text="FirstDoseNumber"
            android:gravity="start"
            android:layout_weight="1"
            android:textSize="13sp"
            android:textColor="@color/vacccination_data_color"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/tv_total_second_dose_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="start"
            tools:text="SecondDoseNumber"
            android:textSize="13sp"
            android:textColor="@color/vacccination_data_color"
            android:textStyle="bold"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>